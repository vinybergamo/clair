Template: clair/vhost_enable
Description: Enable vhost-based deployments?
Type: boolean
Default: false

Template: clair/hostname
Description: Hostname or IP for server:
Type: string
Default: clair.me

Template: clair/skip_key_file
Description: Skip key file requirement?
Type: boolean
Default: false

Template: clair/key_file
Description: Keyfile for initial user:
Type: string
Default: /root/.ssh/id_rsa.pub

Template: clair/nginx_enable
Description: Enable nginx-vhosts plugin?
Type: boolean
Default: true
